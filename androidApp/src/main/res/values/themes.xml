<resources>
    <!-- Base application theme. -->
    <style name="Theme.GitHubClient" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/dark_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/gray</item>
    </style>

    <style name="Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/gray</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.GitHubClient</item>
    </style>

    <style name="TextAppearance.App.Text" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">roboto</item>
    </style>

    <style name="TextAppearance.App.Text.Label">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.App.Text.Label.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="App.Layout.Margin" parent="Theme.AppCompat">
        <item name="android:layout_marginStart">@dimen/fragment_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/fragment_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/fragment_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/fragment_vertical_margin</item>
    </style>

    <style name="Widget.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/gray</item>
        <item name="android:elevation">@dimen/elevation</item>
    </style>

    <style name="Widget.ProgressIndicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="android:elevation">@dimen/elevation</item>
        <item name="android:indeterminate">true</item>
        <item name="indicatorColor">@color/white</item>
    </style>

    <style name="Widget.ProgressIndicator.Small">
        <item name="android:layout_width">@dimen/li_small_size</item>
        <item name="android:layout_height">@dimen/li_small_size</item>
        <item name="indicatorSize">@dimen/li_small_size</item>
    </style>

    <style name="Widget.ProgressIndicator.Large">
        <item name="android:layout_width">@dimen/li_large_size</item>
        <item name="android:layout_height">@dimen/li_large_size</item>
        <item name="indicatorSize">@dimen/li_large_size</item>
    </style>

    <style name="Widget.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:elevation">@dimen/elevation</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:textAppearance">@style/TextAppearance.Widget.Button.Text</item>
    </style>

    <style name="TextAppearance.Widget.Button.Text" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>